<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewCategory">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_category_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:drawablePadding="12dp"
                android:hint="Kategori Id"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_category_name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:drawablePadding="12dp"
                android:hint="Kategori İsmi"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/et_category_introduction"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Açıklama"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_upload_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Kategori Ekle" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>